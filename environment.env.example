# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
#
# ⚠️  SECURITY WARNING: Never commit real credentials to git!
# Copy this file to environment.env and fill in your actual values
#
# =============================================================================

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-07-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Azure ML Configuration
AZURE_ML_WORKSPACE_NAME=your_azure_ml_workspace_name
AZURE_ML_RESOURCE_GROUP=your_resource_group_name
AZURE_ML_SUBSCRIPTION_ID=your_subscription_id

# Azure Container Registry
AZURE_ACR_NAME=your_acr_name
AZURE_ACR_LOGIN_SERVER=your_acr_name.azurecr.io

# Azure Container Apps
AZURE_CONTAINER_APPS_ENVIRONMENT=your_container_apps_environment
AZURE_CONTAINER_APPS_NAME=diabetes-ml-api

# Database Configuration
DATABASE_URL=your_database_connection_string
DATABASE_NAME=diabetes_readmission_db

# Application Configuration
APP_ENV=production
DEBUG=False
LOG_LEVEL=INFO
API_VERSION=1.0.0

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Monitoring Configuration
ENABLE_MONITORING=True
PROMETHEUS_PORT=9090

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=diabetes_readmission

